<%- include("../partials/header.ejs"); %>

<div class="bg">
	<h1 class="form-header">
		Edit Note/Task
	</h1>

	<form action="/index/<%=foundGroup._id %>/task/<%= foundTask._id%>?_method=PUT" method="POST">
	<div class="card" id="form-card">
		<div class="card-body">
			<div class="form-group">
				<label for="name">Name/Title:</label>
				<input type="text" id="name" name="task[name]" value="<%=foundTask.name %>" class="form-control">
			</div>
			<div class="form-group">
				<label for="desc">Description:</label>
				<input type="text" id="desc" name="task[desc]" value="<%=foundTask.desc %>" class="form-control">
			</div>
			<div class="form-group">
				<label for="color-group">Choose color:</label>
					<div id="color-group">
						<div class="row">
							<div class="col-6">
								<div class="form-check form-check-inline">
								  <input class="form-check-input" type="radio" name="task[color]" id="inlineRadio1" value="#EF2D56">
								  <label class="form-check-label" for="inlineRadio1"><div style="background-color:#EF2D56" class="color"></div> Red Crayola</label>
								</div>
							</div>
							<div class="col-6">
								<div class="form-check form-check-inline">
								  <input class="form-check-input" type="radio" name="task[color]" id="inlineRadio2" value="#ED7D3A">
								  <label class="form-check-label" for="inlineRadio2"><div style="background-color:#ED7D3A" class="color"></div> Princeton Orange</label>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6">
								<div class="form-check form-check-inline">
								  <input class="form-check-input" type="radio" name="task[color]" id="inlineRadio3" value="#1EA896">
								  <label class="form-check-label" for="inlineRadio3"><div style="background-color:#1EA896" class="color"></div> Persian Green</label>
								</div>
							</div>
							<div class="col-6">
								<div class="form-check form-check-inline">
								  <input class="form-check-input" type="radio" name="task[color]" id="inlineRadio4" value="#2FBF71">
								  <label class="form-check-label" for="inlineRadio4"><div style="background-color:#2FBF71" class="color"></div> Emerald</label>
								</div>
							</div>
						</div>	
					</div>
				</div>
				<div class="form-group">
					<label for="deadline">Deadline (If Any):</label>
					<input type="text" id="deadline" name="task[deadline]" value="<%=foundTask.deadline %>" class="form-control">
				</div>
			</div>	
			<button class="btn btn-large btn-success">
				Save and Update
			</button>
		</div>
	</form>
</div>

<%- include("../partials/footer.ejs"); %>