<%- include("partials/header.ejs"); %>
<h1>
	Add New Note Group
</h1>
<form action="/index" method="post">
	<div class="form-group">
		<label for="name">Name/Title:</label>
		<input type="text" id="name" name="group[name]" placeholder="Name" class="form-control">
	</div>
	<div class="form-group">
		<label for="desc">Description:</label>
		<input type="text" id="desc" name="group[desc]" placeholder="Description" class="form-control">
	</div>
	<div class="form-group">
		<label for="color-group">Choose color:</label>
		<div id="color-group">
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="group[color]" id="inlineRadio1" value="#EF2D56">
			  <label class="form-check-label" for="inlineRadio1"><div style="background-color:#EF2D56" class="color"></div> Red Crayola</label>
			</div>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="group[color]" id="inlineRadio2" value="#ED7D3A">
			  <label class="form-check-label" for="inlineRadio2"><div style="background-color:#ED7D3A" class="color"></div> Princeton Orange</label>
			</div>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="group[color]" id="inlineRadio3" value="#1EA896">
			  <label class="form-check-label" for="inlineRadio3"><div style="background-color:#1EA896" class="color"></div> Persian Green</label>
			</div>
			<div class="form-check">
			  <input class="form-check-input" type="radio" name="group[color]" id="inlineRadio4" value="#2FBF71">
			  <label class="form-check-label" for="inlineRadio4"><div style="background-color:#2FBF71" class="color"></div> Emerald</label>
			</div>
		</div>	
	</div>	
	<button class="btn btn-large btn-success">
		Make Note Group
	</button>

</form>
<%- include("partials/footer.ejs"); %>